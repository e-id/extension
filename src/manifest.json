{
  "name": "Open e-ID",
  "version": "0.0.1",
  "description": "Open e-ID browser extension",
  "manifest_version": 2,
  "author": "Open e-ID",
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "nativeMessaging"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "extension@e-id.github.io"
    }
  }
}
